<%= simple_form_for fighter do |f| %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :name, required: true, placeholder: "Pikachu" %>
  <%= f.input :life_points, required: true, collection: 1..99 %>
  <%= f.input :attack_points, required: true, collection: 1..99 %>

  <div class="form-actions">
    <%= f.button :submit, "Save", class: "btn btn-primary" %>
  </div>
<% end %>
